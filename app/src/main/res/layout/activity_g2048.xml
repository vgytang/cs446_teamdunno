<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cosine.myapplication.g2048.G2048Activity">

    <TableLayout
        android:id="@+id/board"
        android:layout_width="354dp"
        android:layout_height="350dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/g2048_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89">

        <TableRow
            android:id="@+id/row0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/g2048_board">

            <Button
                android:id="@+id/cell00"
                style="@style/square" />

            <Button
                android:id="@+id/cell01"
                style="@style/square" />

            <Button
                android:id="@+id/cell02"
                style="@style/square" />

            <Button
                android:id="@+id/cell03"
                style="@style/square" />

        </TableRow>

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/g2048_board">

            <Button
                android:id="@+id/cell10"
                style="@style/square" />

            <Button
                android:id="@+id/cell11"
                style="@style/square" />

            <Button
                android:id="@+id/cell12"
                style="@style/square" />

            <Button
                android:id="@+id/cell13"
                style="@style/square" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/g2048_board">

            <Button
                android:id="@+id/cell20"
                style="@style/square" />

            <Button
                android:id="@+id/cell21"
                style="@style/square" />

            <Button
                android:id="@+id/cell22"
                style="@style/square" />

            <Button
                android:id="@+id/cell23"
                style="@style/square" />
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:background="@drawable/g2048_board">

            <Button
                android:id="@+id/cell30"
                style="@style/square" />

            <Button
                android:id="@+id/cell31"
                style="@style/square" />

            <Button
                android:id="@+id/cell32"
                style="@style/square" />

            <Button
                android:id="@+id/cell33"
                style="@style/square" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="123dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
